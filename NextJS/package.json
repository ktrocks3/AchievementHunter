{
	"build": {
		"appId": "com.example.achievement-hunter",
		"productName": "Achievment Hunter by Ktrocks3",
		"files": [
			"backend/build/**/*",
			"frontend/build/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"directories": {
			"output": "dist"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.ico"
		}
	},
	"name": "achievment-hunter",
	"version": "3.1.0",
	"main": "backend/build/main.js",
	"private": true,
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/ktrocks3/AchievementHunter.git"
	},
	"author": "ktrocks3 <kishan@kishant.nl>",
	"license": "MIT",
	"scripts": {
		"frontend:dev": "next dev frontend",
		"frontend:build": "next build frontend",
		"frontend:lint": "next lint frontend",
		"backend:build": "tsc -p backend && tsc-alias -p ./backend/tsconfig.json",
		"backend:lint": "eslint backend",
		"lint": "prettier -c . && yarn backend:lint && yarn frontend:lint",
		"lint:fix": "prettier -w .",
		"boot": "yarn backend:build && electron .",
		"start": "concurrently -k \"yarn frontend:dev\" \"wait-on tcp:127.0.0.1:3000 && yarn boot\"",
		"pre-build": "yarn frontend:build && yarn backend:build",
		"build": "yarn pre-build && electron-builder",
		"postinstall": "electron-builder install-app-deps",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"packageManager": "yarn@4.2.2",
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.7.1",
		"@fortawesome/free-solid-svg-icons": "^6.7.1",
		"@fortawesome/react-fontawesome": "^0.2.2",
		"@radix-ui/react-checkbox": "^1.1.2",
		"@radix-ui/react-dropdown-menu": "^2.1.2",
		"@radix-ui/react-slot": "^1.1.0",
		"@tanstack/react-table": "^8.20.5",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"electron-is-dev": "^3.0.1",
		"electron-log": "^5.1.4",
		"electron-store": "^8.2.0",
		"electron-updater": "6.1.8",
		"lucide-react": "^0.460.0",
		"next": "^15.0.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tailwind-merge": "^2.5.4",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "1",
		"@storybook/addon-essentials": "^8.1.1",
		"@storybook/addon-interactions": "^8.1.1",
		"@storybook/addon-links": "^8.1.1",
		"@storybook/addon-mdx-gfm": "^8.1.1",
		"@storybook/addon-onboarding": "^8.1.1",
		"@storybook/blocks": "^8.1.1",
		"@storybook/nextjs": "^8.1.1",
		"@storybook/react": "^8.1.1",
		"@storybook/test": "^8.4.5",
		"@svgr/webpack": "^8.1.0",
		"@types/node": "^20.12.12",
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"autoprefixer": "^10.4.20",
		"concurrently": "^8.2.2",
		"electron": "^30.0.5",
		"electron-builder": "^24.13.3",
		"electron-devtools-installer": "^3.2.0",
		"eslint": "^8.57.0",
		"eslint-config-next": "^14.2.3",
		"eslint-plugin-storybook": "^0.6.15",
		"postcss": "^8.4.49",
		"prettier": "^3.2.5",
		"storybook": "^8.1.1",
		"tailwindcss": "^3.4.15",
		"tsc-alias": "^1.8.8",
		"tsconfig-paths-webpack-plugin": "^4.1.0",
		"typescript": "^5.4.5",
		"wait-on": "^7.2.0"
	}
}
